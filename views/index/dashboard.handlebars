<h2>Welcome,{{user.firstName}}...</h2>

{{#if stories}}
<h5>these are Your Stories</h5><br>
 <table class="striped">
     <thead>
         <tr>
             <th>Title</th>
             <th>Date</th>
             <th>Status</th>
             <th></th>
         </tr>
     </thead>
     <tbody>
         {{#each stories}}
            <tr>
                <td><a href="/stories/show/{{id}}">{{title}}</a></td>
                <td>{{formatDate data 'MMMM DD, YYYY'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td><a class="waves-effect waves-light btn tooltipped" data-position="left" data-delay="16" data-tooltip="Edit" href="/stories/edit/{{id}}" ><i class="fa fa-pencil"></i> </a>
                
                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-primary btn-xs red lighten-2 tooltipped" data-position="right" data-delay="16" data-tooltip="Delete"><i class="fa fa-trash-o"></i> </button>
                </form>
                </td>
            </tr>
         {{/each}}
     </tbody>
 </table>
{{else}}
    <p>Oops...You have not created any stories yet!</p>
{{/if}}