<h1>Stories...</h1><br>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card   blue-grey darken-4">
                <div class="card-image">
                    {{#if  user}}
                    {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class=".card-content center-align">
                    <br> <h5><b><span style="color:rgb(221, 196, 53);font-weight:bold;font-family:Cursive">{{title}}</span></b></h5><br>
                <p class="story-text"><span style="color:rgb(255, 255, 255);font-family:Cursive">{{stripTags (truncate body 150)}}</span></p>
                <br>
                 <div class="chip">
                    <img src="{{user.image}}" >
                       <a href="/stories/user/{{user.id}}">{{user.firstName}}  {{user.lastName}} </a>
                 </div>
                </div> 
                <div class="card-action center-align">
                    <a class="btn waves-effect waves-light  red darken-4" href="/stories/show/{{id}}">
                       <span style="font-family:Bradley Hand,cursive">Read More </span><i class="material-icons right">send</i>
                    </a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Stories Found!</p>
    {{/each}}
</div>