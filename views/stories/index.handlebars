<h3>These are some life stories of peoples...</h3><br><h4>Happy Reading...</h4><br>
{{#if user}}
{{else}}
<p><h5><a href="/auth/google">Login </a>to create yours...</h5></p><br>
{{/if}}
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card grey lighten-4">
                <div class="card-image">
                    {{#if  user}}
                    {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class=".card-content center-align">
                    <br> <h5><b><span style="color:rgb(10, 10, 10);font-weight:bold;font-family:Cursive">{{title}}</span></b></h5><br>
                <p class="story-text"><span style="color:rgb(175, 146, 18);font-family:Cursive">{{stripTags (truncate body 150)}}</span></p>
                <br>
                 <div class="chip">
                    <img src="{{user.image}}" >
                       <a href="/stories/user/{{user.id}}">{{user.firstName}}  {{user.lastName}} </a>
                 </div>
                </div> 
                <div class="card-action center-align">
                    <a class="btn waves-effect waves-light  red darken-3" href="/stories/show/{{id}}">
                       <span style="font-family:Bradley Hand,cursive">Read More </span><i class="material-icons right">send</i>
                    </a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Stories Found!</p>
    {{/each}}
</div>